@model  Registeration
<html>
<head>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    @{
        ViewData["Title"] = "Registeration Form";
    }

</head>    

<body>
    <form method="post"  asp-action="DisplayDetails" asp-controller="Job" >

        <div style="margin-left:25%;margin-right:25%;">

            <div><h1>Job Application Form</h1></div>

            <div><hr /></div>

            <div class="row">
                <label style="font-size:18px;font-family:'Arial Narrow Bold' ">Full Name :</label>
            </div>

            <div class="row">
                <div class="column">
                    <input asp-for="fName"><br />
                    <label asp-for="fName" style="font-size:12px">FirstName</label><br />
                    <span asp-validation-for="fName" class="text-danger"></span>
                </div>
                <div class="column">
                    <input asp-for="mName"><br />
                    <label asp-for="mName" style="font-size:12px">MiddleName</label><br />
                    <span asp-validation-for="mName" class="text-danger"></span>
                </div>
                <div class="column">
                    <input asp-for="lName"><br />
                    <label asp-for="lName" style="font-size:12px">LastName</label><br />
                    <span asp-validation-for="lName" class="text-danger"></span>
                </div>
            </div>

            <div>
                <label class="row" style="font-size:18px;font-family:'Arial Narrow Bold'">Date of Birth :</label>
            </div>

            <div class="row">
                <div class="column">
                    <select asp-for="Month" style="width : 120px;">
                        <option> </option>
                        <option value="January">January</option>
                        <option value="Febauary">Febauary</option>
                        <option value="March">March</option>
                        <option value="April">April</option>
                        <option value="May">May</option>
                        <option value="June">June</option>
                        <option value="July">July</option>
                        <option value="August">August</option>
                        <option value="September">September</option>
                        <option value="October">October</option>
                        <option value="November">November</option>
                        <option value="December">December</option>
                    </select><br />
                    <label asp-for="Month" style="font-size:12px">Month</label><br />
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>
                <div class="column">
                    <select asp-for="Date" style="width : 120px">
                        <option> </option>
                        <option value="1"> 1 </option>
                        <option value="2"> 2 </option>
                        <option value="3"> 3 </option>
                        <option value="4"> 4 </option>
                        <option value="5"> 5 </option>
                        <option value="6"> 6 </option>
                        <option value="7"> 7 </option>
                        <option value="8"> 8 </option>
                        <option value="9"> 9 </option>
                        <option value="10"> 10 </option>
                        <option value="11"> 11 </option>
                        <option value="12"> 12 </option>
                        <option value="13"> 13 </option>
                        <option value="14"> 14 </option>
                        <option value="15"> 15 </option>
                        <option value="16"> 16 </option>
                        <option value="17"> 17 </option>
                        <option value="18"> 18 </option>
                        <option value="19"> 19 </option>
                        <option value="20"> 20 </option>
                        <option value="21"> 21 </option>
                        <option value="22"> 22 </option>
                        <option value="23"> 23 </option>
                        <option value="24"> 24 </option>
                        <option value="25"> 25 </option>
                        <option value="26"> 26 </option>
                        <option value="27"> 27 </option>
                        <option value="28"> 28 </option>
                        <option value="29"> 29 </option>
                        <option value="30"> 30 </option>
                        <option value="31"> 31 </option>
                    </select><br />
                    <label asp-for="Date" style="font-size:12px">Date</label><br />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="column">
                    <select asp-for="Year" style="width : 120px"><option> </option><option value="2021"> 2021 </option><option value="2020"> 2020 </option><option value="2019"> 2019 </option><option value="2018"> 2018 </option><option value="2017"> 2017 </option><option value="2016"> 2016 </option><option value="2015"> 2015 </option><option value="2014"> 2014 </option><option value="2013"> 2013 </option><option value="2012"> 2012 </option><option value="2011"> 2011 </option><option value="2010"> 2010 </option><option value="2009"> 2009 </option><option value="2008"> 2008 </option><option value="2007"> 2007 </option><option value="2006"> 2006 </option><option value="2005"> 2005 </option><option value="2004"> 2004 </option><option value="2003"> 2003 </option><option value="2002"> 2002 </option><option value="2001"> 2001 </option><option value="2000"> 2000 </option><option value="1999"> 1999 </option><option value="1998"> 1998 </option><option value="1997"> 1997 </option><option value="1996"> 1996 </option><option value="1995"> 1995 </option> </select><br />
                    <label asp-for="Year" style="font-size:12px">Year</label><br />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <label style="font-size:18px;font-family:'Arial Narrow Bold' ">Current Address :</label><br />
            </div>

            <div class="row">
                <div>
                    <input asp-for="StreetAddress" style="width:480px" /><br />
                    <label asp-for="StreetAddress" style="font-size:12px"> Street Address</label><br />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    <input asp-for="StreetAddress1" style="width:480px" /><br />
                    <label asp-for="StreetAddress1" style="font-size:12px"> Street Address 1</label><br />
                </div>
            </div>
            <div class="row">
                <div class="column1">
                    <input asp-for="City" /><br />
                    <label asp-for="City" style="font-size:12px">City</label><br />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="column1">
                    <input asp-for="State" /><br />
                    <label asp-for="State" style="font-size:12px">State / Province</label><br />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>


            <div class="row">
                <div>
                    <input asp-for="PinCode" /><br />
                    <label asp-for="PinCode" style="font-size:12px">Postal/Pincode</label><br />
                    <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div>
                    <label asp-for="EMail" style="font-size:18px;font-family:'Arial Narrow Bold' ">Email :</label><br />
                    <input asp-for="EMail" style="width:300px" type="tel" placeholder="myname@gmail.com" /><br />
                    <label style="font-size:12px">example@example.com</label><br />
                    <span asp-validation-for="EMail" class="text-danger"></span><br />
                </div>
            </div>

            <div class="row">
                <div>
                    <label asp-for="PhoneNumber" style="font-size:18px;font-family:'Arial Narrow Bold' ">Phone Number :</label><br />
                    <input asp-for="PhoneNumber" type="tel" style="width:300px" placeholder="(000) 000 0000" /><br />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div>
                    <label asp-for="LinkedIn" style="font-size:18px">LinkedIn :</label><br />
                    <input asp-for="LinkedIn" style="width:300px" />
                </div>
            </div>

            <div><hr /></div>

            <div class="row">
                <div>
                    <label asp-for="PositionApplied" style="font-size:18px;font-family:'Arial Narrow Bold'">Position Applied :</label><br />
                    <select asp-for="PositionApplied" style="width:200px">
                        <option value=" "></option>
                        <option value="MarketingSpecialist">MarketingSpecialist </option>
                        <option value="SalesManager">SalesManager </option>
                        <option value="ProductLead">ProductLead </option>
                        <option value="Developer ">Developer </option>

                    </select><br />
                    <span asp-validation-for="PositionApplied" class="text-danger"></span><br />
                </div>
            </div>

            <div class="row">
                <div>
                    <label asp-for="Aboutus" style="font-size:18px;font-family:'Arial Narrow Bold'">How did you hear about us :</label><br />
                    <select asp-for="Aboutus" style="width:200px">
                        <option> </option>
                        <option value="SocialMedia">SocialMedia</option>
                        <option value="LinkedIn">LinkedIn</option>
                        <option value="Event">Event</option>
                        <option value="CompanyWebsite">CompanyWebsite</option>
                        <option value="Family">Family</option>
                    </select>
                </div>
            </div>

            <div class="row"><br /></div>

            <div class="row">
                <div>
                    <label asp-for="AppStartDate" style="font-size:18px;font-family:'Arial Narrow Bold'">Available Start Date :</label><br />
                    <input asp-for="AppStartDate" type="date" /><br />
                    <span asp-validation-for="AppStartDate" class="text-danger"></span><br />
                </div>
            </div>

            <div class="row"><br /></div>

            <div class="row">
                <div>
                    <label asp-for="CoverLetter" style="font-size:18px;font-family:'Arial Narrow Bold'">Cover Letter :</label><br />
                    <textarea asp-for="CoverLetter" style="resize:both;width:400px;height :100px;"></textarea>
                </div>
            </div>
            <br /><br />
            <div>
                <table align="center">
                    <tr>
                        <td><button type="submit" style="background-color:forestgreen">Submit</button></td>
                    </tr>
                </table>
            </div>


        </div>
    </form>
</body>
</html>